[Unit]
Description=Direwolf APRS Digipeater (pi user)
After=network-online.target sound.target
Wants=network-online.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/digi
ExecStart=/usr/local/bin/direwolf -c /home/pi/direwolf.conf -t 0
Restart=on-failure
RestartSec=5
Nice=-2

NoNewPrivileges=yes
ProtectSystem=full
ProtectHome=false
PrivateTmp=yes
ProtectHostname=yes
ProtectKernelTunables=yes
ProtectKernelModules=yes

[Install]
WantedBy=multi-user.target
